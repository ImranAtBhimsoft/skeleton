<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skeleton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--Effects on buttons text-->
        <item name="colorOnPrimary">@color/white</item>
        <!--Normal text-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ToolBarStyle.Base" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.SubTitle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/light_black</item>

    </style>

    <style name="TextAppearance.Toolbar.Title" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Toolbar.SubTitle" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>